@model teste_fiap.Models.Aluno

@{
    ViewBag.Title = "Detalhes";
}
<div class="container">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2></h2>
            </div>
            <div class="modal-body">
                <div>
                    
                    
                    <dl class="dl-horizontal">
                        <dt>
                            Segmento:
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Segmento.Nome)
                        </dd>


                        <dt>
                            @Html.DisplayNameFor(model => model.Nome)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Nome)
                        </dd>

                        <dt>
                            Curso:
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Curso.Nome)
                        </dd>

                        <dt>
                            Data de Nascimento:
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.DataNascimento)
                        </dd>



                        <dt>
                            @Html.DisplayNameFor(model => model.Telefone)
                        </dt>

                        <dd>
                           (@Html.DisplayFor(model => model.DDD)) @Html.DisplayFor(model => model.Telefone)
                        </dd>

                    </dl>
                </div>
            </div>
            <div class="modal-footer">
                <p>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Fechar</button>
                </p>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>
